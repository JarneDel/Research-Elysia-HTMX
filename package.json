{
  "$schema": "https://json.schemastore.org/package",
  "name": "app",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "predev": "docker compose -f ./infra/docker-compose.yaml up -d",
    "dev": "concurrently \"bun run serve\" \"bun --inspect --watch src/index.ts\" \"bun run build --watch\" ",
    "build": "tailwindcss -i ./src/styles/globals.css -o ./public/globals.css",
    "----CHECK": "",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore --fix . ",
    "typecheck": "tsc --noEmit && rm tsconfig.tsbuildinfo",
    "serve": "browser-sync start --config bs-config.cjs",
    "---DOCS": "",
    "docs:generate": "nodemon -e 'ts, tsx' -x \"sleep 1 && curl -s http://localhost:3000/docs/json > ./docs/swagger.json\"",
    "---DOCKER:DEPLOY": "",
    "deploy:docker": "docker compose -f ./infra/docker-compose-production.yml up -d",
    "deploy:docker:build": "docker compose -f ./infra/docker-compose-production.yml build",
    "deploy:docker:stop": "docker compose -f ./infra/docker-compose-production.yml down",
    "deploy:docker:logs": "docker compose -f ./infra/docker-compose-production.yml logs -f",
    "predeploy:docker:push": "docker compose -f ./infra/docker-compose-production.yml build",
    "deploy:docker:push": "docker compose -f ./infra/docker-compose-production.yml push"
  },
  "dependencies": {
    "@elysiajs/html": "^0.8.0",
    "@elysiajs/static": "^0.8.1",
    "@elysiajs/swagger": "^0.8.3",
    "@kitajs/ts-html-plugin": "^1.3.3",
    "@supabase/ssr": "^0.0.10",
    "@supabase/supabase-js": "^2.39.1",
    "@types/qrcode": "^1.5.5",
    "elysia": "latest",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "sanitize-html": "^2.11.0",
    "short-unique-id": "^5.0.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/sanitize-html": "^2.9.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "browser-sync": "^3.0.2",
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "daisyui": "latest",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-toolbelt": "^9.6.0"
  },
  "module": "src/index.js",
  "type": "module",
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
